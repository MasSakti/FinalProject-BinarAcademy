<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectGroup2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q" >false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#fff</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="GeneralButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="fab">
        <item name="android:padding">16dp</item>
    </style>

    <style name="NavBottom" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/nunitobold</item>
    </style>

    <style name="WhiteButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#7126B5</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_white_button</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="WhitePurpleButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#7126B5</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_white_button</item>
    </style>
</resources>