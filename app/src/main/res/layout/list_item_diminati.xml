<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_terjual"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/kena"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_penawaranProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="penawaran product"
        app:layout_constraintStart_toEndOf="@+id/iv_terjual"
        app:layout_constraintTop_toTopOf="@+id/iv_terjual" />

    <TextView
        android:id="@+id/tv_namaProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nama product"
        app:layout_constraintStart_toEndOf="@+id/iv_terjual"
        app:layout_constraintTop_toBottomOf="@+id/tv_penawaranProduct" />

    <TextView
        android:id="@+id/tv_hargaProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="harga product"
        app:layout_constraintStart_toEndOf="@+id/iv_terjual"
        app:layout_constraintTop_toBottomOf="@+id/tv_namaProduct" />

    <TextView
        android:id="@+id/tv_ditawarProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ditawar Rp 200"
        app:layout_constraintStart_toEndOf="@+id/iv_terjual"
        app:layout_constraintTop_toBottomOf="@+id/tv_hargaProduct" />

    <TextView
        android:id="@+id/tv_tanggalTawar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tanggal"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_namaProduct" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#999999"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>